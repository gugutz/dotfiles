###################################################################
# Monitors Setup

set $home_primary_monitor DVI-I-2
set $home_secondary_monitor DVI-I-1
# dell monitor screen
set $work_primary_monitor DP1
# notebook screen
set $work_secondary_monitor eDP1

# home monitors
set $primary_monitor DVI-I-2
set $secondary_monitor DVI-I-1
# work monitors
# set $primary_monitor eDP1
# set $secondary_monitor DP1

# home mirrored layout
set $home_dual_monitor_mirrored_layout xrandr --output DVI-I-2 --mode 1920x1080 --rotate normal --output DVI-I-1 --mode 1280x1024 --same-as $home_primary_monitor
# home extended layout
set $home_dual_monitor_extended_layout xrandr --output DVI-I-1 --mode 1280x1024 --pos 0x0 --rotate normal --output DVI-I-2 --primary --mode 1920x1080 --pos 1280x0 --rotate normal


# just the notebook screen
set $work_single_monitor_layout xrandr --output eDP1 --primary --mode 1920x1080 --pos 0x0 --rotate normal --output DP1 --off
# mirrored layout
set $work_dual_monitor_mirrored_layout xrandr --output eDP1 --mode 1920x1080 --pos 0x0 --rotate normal --output DP1 --primary --mode 1920x1080 --pos 0x0 --rotate normal
# extended layout
set $work_dual_monitor_extended_layout xrandr --output eDP1 --mode 1920x1080 --pos 1920x0 --rotate normal --output DP1 --primary --mode 1920x1080 --pos 0x0 --rotate normal

# setup monitors
exec_always --no-startup-id $home_dual_monitor_extended_layout

# HOME
bindsym $mod+Control+Shift+1 exec $home_single_monitor_layout; exec notify-send 'using home single monitor layout'
bindsym $mod+Control+Shift+2 exec $home_dual_monitor_mirrored_layout; exec notify-send 'using home single monitor layout'
bindsym $mod+Control+Shift+3 exec $home_dual_monitor_extended_layout; exec notify-send 'using home dual monitor extended layout'

# WORK
bindsym $mod+Control+Shift+8 exec $work_single_monitor_layout; exec notify-send 'using work single monitor layout'
bindsym $mod+Control+Shift+9 exec $work_dual_monitor_mirrored_layout;  exec notify-send 'using work mirrored monitor layout'
bindsym $mod+Control+Shift+0 exec $work_dual_monitor_extended_layout;  exec notify-send 'using work dual monitor extended layout'


