# lock screen directly with a picked image
# exec xautolock -time 5 -locker "i3lock -c 000000 -i /usr/share/backgrounds/i3/Neon_City.png"

# xss-lock grabs a logind suspend inhibit lock and will use i3lock to lock the
# screen before suspend. Use loginctl lock-session to lock your screen.
exec --no-startup-id xss-lock --transfer-sleep-lock -- i3lock --nofork

# auto start blurlock after X minutes
exec --no-startup-id xautolock -time 5 -locker blurlock
